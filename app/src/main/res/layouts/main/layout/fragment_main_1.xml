<?xml version="1.0" encoding="utf-8"?>
<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coord_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="true"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    app:layout_collapseParallaxMultiplier="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--<com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"-->
                        <!--android:background="#ffffff"-->
                        <!--android:id="@+id/banner"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="440px" />-->

                    <com.synnapps.carouselview.CarouselView
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="360px"
                        app:fillColor="#FFFFFFFF"
                        app:pageColor="#00000000"
                        app:radius="6dp"
                        app:slideInterval="3000"
                        app:strokeColor="#FF777777"
                        app:strokeWidth="1dp"/>

                    <LinearLayout
                        android:background="#dbd9d9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                            <LinearLayout
                                android:paddingLeft="24dp"
                                android:paddingRight="24dp"
                                android:paddingTop="20px"
                                android:paddingBottom="20px"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="240px"
                                        app:cardCornerRadius="5dp"
                                        app:cardElevation="3dp"
                                        android:foreground = "?attr/selectableItemBackground"
                                        app:elevation="1dp">

                                        <LinearLayout
                                            android:background="@drawable/card_main_bg"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="24dp"
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <ImageView
                                                android:id="@+id/main_fr_1_image1"
                                                android:background="@drawable/fragment_custom1"
                                                android:layout_width="485px"
                                                android:layout_margin="10px"
                                                android:layout_height="220px" />

                                            <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <com.hanks.htextview.scale.ScaleTextView
                                                    android:id="@+id/fragment_main_text1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:paddingLeft="50px"
                                                    android:paddingTop="40px"
                                                    android:background="#ffffff"
                                                    android:textColor="#353030"
                                                    android:gravity="right"
                                                    android:letterSpacing="0.1"
                                                    android:text="个人简报"
                                                    android:textSize="60px" />


                                                <TextView
                                                    android:text="凸显风格,做想要的自己"
                                                    android:gravity="right|center"
                                                    android:layout_gravity="center"
                                                    android:textSize="40px"
                                                    android:textColor="#534c4c"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="140px" />

                                            </LinearLayout>
                                        </LinearLayout>
                                    </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_marginTop="20px"
                                    android:layout_width="match_parent"
                                    android:layout_height="240px"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="3dp"
                                    android:foreground = "?attr/selectableItemBackground"
                                    app:elevation="1dp">

                                    <LinearLayout
                                        android:background="@drawable/card_main_bg"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="24dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/main_fr_1_image2"
                                            android:background="@drawable/fragment_custom2"
                                            android:layout_width="485px"
                                            android:layout_margin="10px"
                                            android:layout_height="220px" />

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.hanks.htextview.scale.ScaleTextView
                                                android:id="@+id/fragment_main_text2"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="50px"
                                                android:paddingTop="40px"
                                                android:background="#ffffff"
                                                android:textColor="#353030"
                                                android:gravity="right"
                                                android:letterSpacing="0.1"
                                                android:text="日志文章"
                                                android:textSize="60px" />

                                            <TextView
                                                android:text="为平淡的日志带来色彩"
                                                android:gravity="right|center"
                                                android:layout_gravity="center"
                                                android:textSize="40px"
                                                android:textColor="#534c4c"
                                                android:layout_width="match_parent"
                                                android:layout_height="140px" />


                                        </LinearLayout>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_marginTop="20px"
                                    android:layout_width="match_parent"
                                    android:layout_height="240px"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="3dp"
                                    android:foreground = "?attr/selectableItemBackground"
                                    app:elevation="1dp">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:background="@drawable/card_main_bg"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="24dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/main_fr_1_image3"
                                            android:background="@drawable/fragment_custom3"
                                            android:layout_width="485px"
                                            android:layout_margin="10px"
                                            android:layout_height="220px" />

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.hanks.htextview.scale.ScaleTextView
                                                android:id="@+id/fragment_main_text3"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="50px"
                                                android:paddingTop="40px"
                                                android:background="#ffffff"
                                                android:textColor="#353030"
                                                android:gravity="right"
                                                android:letterSpacing="0.1"
                                                android:text="新闻简报"
                                                android:textSize="60px" />

                                        </LinearLayout>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_marginTop="20px"
                                    android:layout_width="match_parent"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="3dp"
                                    android:layout_height="240px"
                                    android:foreground = "?attr/selectableItemBackground"
                                    app:elevation="1dp">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:paddingLeft="8dp"
                                        android:background="@drawable/card_main_bg"
                                        android:paddingRight="24dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/main_fr_1_image4"
                                            android:background="@drawable/fragment_custom4"
                                            android:layout_width="485px"
                                            android:layout_margin="10px"
                                            android:layout_height="220px" />

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.hanks.htextview.scale.ScaleTextView
                                                android:id="@+id/fragment_main_text4"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="50px"
                                                android:paddingTop="40px"
                                                android:background="#ffffff"
                                                android:textColor="#353030"
                                                android:gravity="right"
                                                android:letterSpacing="0.1"
                                                android:text="日常海报"
                                                android:textSize="60px" />

                                            <TextView
                                                android:text="记录日常生活的点点滴滴"
                                                android:gravity="right|center"
                                                android:layout_gravity="center"
                                                android:textSize="40px"
                                                android:textColor="#534c4c"
                                                android:layout_width="match_parent"
                                                android:layout_height="140px" />


                                        </LinearLayout>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>


                            </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_marginLeft="15px"
                            android:background="#000000"
                            android:layout_width="10px"
                            android:layout_height="71px"/>

                        <TextView
                            android:layout_marginLeft="25px"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="50px"
                            android:text="海 报 展 示 ↓ "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>


                <!--<android.support.v7.widget.Toolbar-->
                    <!--android:id="@+id/toolbar"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="?attr/actionBarSize"-->
                    <!--app:layout_collapseMode="pin"-->
                    <!--app:layout_scrollFlags="scroll|enterAlways">-->

                <!--</android.support.v7.widget.Toolbar>-->

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment1_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"

            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <!--android:paddingLeft="15dp"-->
            <!--android:paddingRight="15dp"-->
        </android.support.v7.widget.RecyclerView>

    </android.support.design.widget.CoordinatorLayout>


</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>


