<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.turing.newaomo.davinsbrush.activity.other.ServerClassifyActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="400px"
                    android:layout_height="354dp">

                    <ImageView
                        android:layout_width="400px"
                        android:layout_height="700px"
                        android:src="@drawable/show22222" />

                </FrameLayout>


                <LinearLayout
                    android:layout_width="200px"
                    android:layout_height="330dp"
                    android:layout_marginTop="50px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:gravity="center"
                        android:text="颜色1"
                        android:textColor="#f60025"
                        android:textSize="70px" />

                    <ImageView
                        android:layout_width="150px"
                        android:layout_height="50px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30px"
                        android:layout_marginTop="20px"
                        android:background="#00A0FF" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:text="颜色2"
                        android:textColor="#f60025"
                        android:textSize="70px" />

                    <ImageView
                        android:layout_width="150px"
                        android:layout_height="50px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30px"
                        android:layout_marginTop="20px"
                        android:background="#2BDE73" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:text="颜色3"
                        android:textColor="#f60025"
                        android:textSize="70px" />

                    <ImageView
                        android:layout_width="150px"
                        android:layout_height="50px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30px"
                        android:layout_marginTop="20px"
                        android:background="#AEB8C3" />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200px"
                    android:layout_height="100px"
                    android:gravity="center"
                    android:text="风格:"
                    android:textColor="#f60025"
                    android:textSize="50px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text="cartoon"
                    android:textColor="#f4a136"
                    android:textSize="50px" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
